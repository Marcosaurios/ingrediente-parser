    "peggy": "^1.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.7",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "chokidar": "^3.5.2",
